{
  "name": "aomr-hero-launcher",
  "version": "1.1.0",
  "description": "Age of Mythology: Retold Hero Launcher",
  "main": "dist/main.js",
  "scripts": {
    "ng": "ng",
    "start": "npm run electron",
    "serve": "npx ng serve",
    "build": "ng build && npm run electron:build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "electron": "npm run electron:build && electron .",
    "electron:dev": "npm run electron:build && electron . --serve",
    "electron:build": "tsc main.ts --outDir dist/ && copy preload.js dist\\",
    "package": "electron-builder",
    "dist": "npm run build && npm run package",
    "lint": "ng lint"
  },
  "keywords": [
    "electron",
    "angular",
    "age-of-mythology",
    "launcher"
  ],
  "author": "sliferdev",
  "license": "MIT",
  "devDependencies": {
    "@angular-devkit/build-angular": "^20.0.0",
    "@angular/cli": "^20.0.0",
    "@angular/compiler-cli": "^20.0.0",
    "@types/electron-store": "^1.3.1",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^18.7.18",
    "angular-eslint": "20.1.1",
    "electron": "^37.0.0",
    "electron-builder": "^25.0.0",
    "eslint": "^9.29.0",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.8.0",
    "typescript-eslint": "8.34.1"
  },
  "dependencies": {
    "@angular/animations": "^20.0.0",
    "@angular/cdk": "^20.1.5",
    "@angular/common": "^20.0.0",
    "@angular/compiler": "^20.0.0",
    "@angular/core": "^20.0.0",
    "@angular/forms": "^20.0.0",
    "@angular/platform-browser": "^20.0.0",
    "@angular/platform-browser-dynamic": "^20.0.0",
    "@angular/router": "^20.0.0",
    "@fortawesome/fontawesome-free": "^7.0.0",
    "@ng-bootstrap/ng-bootstrap": "^19.0.0",
    "@ngx-translate/core": "^16.0.0",
    "@ngx-translate/http-loader": "^8.0.0",
    "@popperjs/core": "^2.11.8",
    "bootstrap": "^5.3.0",
    "electron-store": "^10.1.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "build": {
    "appId": "aomr.hero.launcher",
    "productName": "AoM:R Hero Launcher",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.games",
      "icon": "src/assets/images/logo.ico"
    },
    "win": {
      "target": "nsis",
      "icon": "src/assets/images/logo.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "src/assets/images/logo.ico"
    }
  }
}